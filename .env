STEAM_API_KEY=XXXXXXXXXXXXXXX

# Toggle Sentry (server + client)
# Accepts: 1/0, true/false, yes/no, on/off (case-insensitive)
SENTRY_ENABLED=false

# Server + client DSN for Sentry
SENTRY_DSN=

# Optional environment label for Sentry
SENTRY_ENVIRONMENT=production

# Optional traces sample rate (0.0 - 1.0)
SENTRY_TRACES_SAMPLE_RATE=1.0

# Optional Sentry browser loader URL (CDN script)
# If omitted, a default loader URL is used
SENTRY_BROWSER_LOADER_URL=https://js.sentry-cdn.com/your-loader.min.js